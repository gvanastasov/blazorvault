@inject NavigationManager NavigationManager;

<div class="sidebar-header">
    <h3 class="sr-only">Blazor Vault</h3>
    <img src="images/blazor-vault-logo.png" alt="blazor vault logo" />
    <BVLink To="@Routes.Home"><span class="sr-only">Home</span></BVLink>
</div>

<section class="sidebar-links">
    <BVLink To="/components">Components</BVLink>
    <hr />
    <ol class="list-unstyled">
        @foreach (var item in links)
        {
            <li>
                <BVLink To="@item.Key">@item.Value</BVLink>
            </li>
        }
    </ol>
</section>


@code {
    protected SortedDictionary<string, string> links = new SortedDictionary<string, string>
    {
        { "components/alert", "Alert" },
        { "components/badge", "Badge" },
        { "components/button", "Button" },
        { "components/button-group", "Button Group" },
        { "components/link", "Link" },
        { "components/spinner", "Spinner" },
        { "components/card", "Card" },
        { "components/carousel", "Carousel" },
        { "components/code", "Code" },
        { "components/list-group", "List Group" },
        { "components/heading", "Heading" },
        { "components/icon", "Icon" },
        { "components/jumbotron", "Jumbotron" },
        { "components/modal", "Modal" },
        { "components/progress-bar", "Progress Bar" },
        { "components/text", "Text" },
        { "components/toast", "Toast" },
        { "components/grid", "Grid" },
        { "components/collapsable", "Collapsable" },
        { "components/container", "Container" },
        { "components/breadcrumbs", "Breadcrumbs" },
        { "components/dynamic", "Dynamic" },
        { "components/tabs", "Tabs" },
        { "components/dropdown", "Dropdowns" },
        { "components/forms", "Forms" },
        { "components/tree", "Tree" },
    };

    protected string CurrentRoute
    {
        get
        {
            return NavigationManager.Uri.ToString();
        }
    }
}
