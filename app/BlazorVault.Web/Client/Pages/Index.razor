@page "/"

<BVContainer>
    <BVJumbotron class="text-center">
        <BVHeading>Blazor Vault</BVHeading>
        <BVText Lead>A complete library of reusable components.</BVText>
        <BVButton Href="components" Style="Style.Primary">Enter</BVButton>
    </BVJumbotron>
</BVContainer>


@code {
    [CascadingParameter(Name="layout")]
    public MainLayout Layout { get; set; }

    [Inject]
    private IJSRuntime JSRuntime { get; set; }

    protected override void OnInitialized()
    {
        Layout.Update(
            x =>
            {
                x.ShowSideBar = false;
            });
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeAsync<object>("Blazor.app.openGates", "vault-gates");
        }
    }
}