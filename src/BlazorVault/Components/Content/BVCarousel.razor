@namespace BlazorVault
@inherits BVCarouselBase

<div @attributes="@UnknownAttributes" class="@GetClassString()">
    <div class="carousel-inner">
        <CascadingValue Value="this">
            @ChildContent
        </CascadingValue>
    </div>
    @if (HasPrev)
    {
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev" @onclick="Prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
    }
    @if (HasNext)
    {
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next" @onclick="Next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    }
</div>